<?xml version="1.0"?>

<configuration>
  
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>

  <system.webServer>
     <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>

  <system.serviceModel>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />

    <services>
      <service name="wcfLibrary.service" behaviorConfiguration="serviceBehavior">
        
        
        
        <endpoint address ="secureAddr" binding="wsHttpBinding" contract="wcfLibrary.IService"></endpoint>
        <endpoint address ="REST" binding="webHttpBinding" contract="wcfLibrary.IService" behaviorConfiguration="WEB"></endpoint>
        <endpoint address="mex" contract="IMetadataExchange" binding="mexHttpBinding" />
      </service>
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
      
      <endpointBehaviors>
        <behavior name="WEB">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
      
    </behaviors>

  </system.serviceModel>
</configuration>
