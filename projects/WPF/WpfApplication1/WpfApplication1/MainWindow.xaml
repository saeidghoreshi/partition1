<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="WpfApplication1.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.5*"/>
			<RowDefinition Height="0.5*"/>
		</Grid.RowDefinitions>
		<Grid Margin="0,-32,0,8" Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="0.139*"/>
				<RowDefinition Height="0.861*"/>
			</Grid.RowDefinitions>
			<StackPanel HorizontalAlignment="Left" Margin="26,15.945,0,8" Grid.Row="1" Width="87">
				<CheckBox Content="CheckBox"/>
				<Slider/>
				<TabControl Height="100">
					<TabItem Header="TabItem">
						<TabControl>
							<TabItem Header="TabItem">
								<Grid Background="#FFE5E5E5"/>
							</TabItem>
							<TabItem Header="TabItem">
								<Grid Background="#FFE5E5E5"/>
							</TabItem>
						</TabControl>
					</TabItem>
					<TabItem Header="TabItem">
						<Grid Background="#FFE5E5E5"/>
					</TabItem>
				</TabControl>
				<Button x:Name="button1" Content="Button" Click="Button_Click"/>
			</StackPanel>
		</Grid>
		<Grid Margin="3,1,8,7"/>
	</Grid>
</Window>