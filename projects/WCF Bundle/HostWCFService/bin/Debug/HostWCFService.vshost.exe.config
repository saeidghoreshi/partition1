<?xml version="1.0"?>
<configuration>

    <system.serviceModel>
      <serviceHostingEnvironment aspNetCompatibilityEnabled="true" />
        <standardEndpoints>
            <webHttpEndpoint>
                <standardEndpoint name="NewStandardEndpoint0" defaultOutgoingResponseFormat="Xml"
                    automaticFormatSelectionEnabled="true" crossDomainScriptAccessEnabled="true">
                    <readerQuotas maxDepth="524288" maxStringContentLength="524288"
                        maxArrayLength="524288" maxBytesPerRead="524288" maxNameTableCharCount="524288" />
                </standardEndpoint>
            </webHttpEndpoint>
        </standardEndpoints>
        <bindings>
            <webHttpBinding>
                <binding name="webhttpbind1" allowCookies="true" bypassProxyOnLocal="true"
                    maxBufferSize="2147483647" maxBufferPoolSize="2147483647"
                    maxReceivedMessageSize="2147483647" transferMode="Buffered"
                    contentTypeMapper="" crossDomainScriptAccessEnabled="true">
                    <readerQuotas maxDepth="2147483647" maxStringContentLength="2147483647"
                        maxArrayLength="2147483647" maxBytesPerRead="2147483647" maxNameTableCharCount="2147483647" />
                </binding>
            </webHttpBinding>
        </bindings>
        <behaviors>
            <endpointBehaviors>
                <behavior name="bahavior1">
                    <webHttp />
                </behavior>
            </endpointBehaviors>

          <serviceBehaviors>
            <behavior name="Metadata">
              <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8088/helloservice/meta" />
              <serviceDebug includeExceptionDetailInFaults="false" />
            </behavior>
          </serviceBehaviors>
          
        </behaviors>

      
  
       
        <services>
            <service behaviorConfiguration="Metadata" name="newWCFService.HelloService">
                <endpoint address="http://localhost:8080/helloservice/basic"
                    binding="basicHttpBinding" name="basichttp" contract="newWCFService.IHello" />
                <endpoint address="http://localhost:8080/helloservice/webhttp"
                    behaviorConfiguration="bahavior1" binding="webHttpBinding"
                    bindingConfiguration="webhttpbind1" name="webhttp" contract="newWCFService.IHello"
                    kind="webHttpEndpoint" endpointConfiguration="NewStandardEndpoint0" />
                <endpoint address="http://localhost:8088/helloservice/mex" binding="mexHttpBinding"
                    contract="IMetadataExchange" />
            </service>
        </services>
      
    </system.serviceModel>
</configuration>
