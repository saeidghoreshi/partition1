		<script>

		    CKEDITOR.appendTo('section1',
				null,
				'<p>This is some <strong>sample text</strong>. You are using <a href="http://ckeditor.com/">CKEditor</a>.</p>'
			);

		</script>
	</div>
    

    <!--win layout-->
    <div id="w" class="easyui-window" title="Window Layout" data-options="iconCls:'icon-save'" style="width:600px;height:500px;padding:5px;">  
        <div id="lll" class="easyui-layout" style="width:100%;height:745px;margin-top:5px;">  
            <div data-options="region:'west',title:'Main Panel',split:true" style="width:250px;background:#f5f5f5">
                    <!--ACC-->
        	        <div id="aa" class="easyui-accordion" style="height:600px;border:0px">
		        
		                <div title="Users" style="padding-left:2px;" data-options="selected:true,border:false">
                
                        <!--treeView Componet-->
                        <ul id="tree" class="easyui-tree" data-options="url:'/workflow/getusers',animate:true,lines:true" ></ul>  
                
                        </div>
	                </div>
                    <!--Acc End-->
            </div>  
            <div data-options="region:'center',title:'center title'" style="padding:2px;background:#eee;">
        
            </div>  
    
        </div>  

    </div>  
  


