<!--html-->
<div id='tt_ta_panel'>
<div>Task Assignment</div>
<div>       
    <form id="tt_ta_frm" >
        <table cellpadding=0 cellspacing=0 border=0 width=100%>
        
            <tr>
                <td width="320px">

                    Offices : <div id="tt_ta_offices"></div>
                    User List :
                    
                    
                    <div id="scroll-pane">
                        <div id="tt_ta_userListContainer" ></div>
                    </div>
                    


                </td>
